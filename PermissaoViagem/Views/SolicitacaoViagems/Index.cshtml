@model IEnumerable<PermissaoViagem.Models.SolicitacaoViagem>

@{
    ViewBag.Title = "Solicitações de Viagem";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Solicitante
        </th>
        <th>
            Data de Partida
        </th>
        <th>
            Data de Chegada Prevista
        </th>
        <th>
            Transporte
        </th>
        <th>
            Origem
        </th>
        <th>
            Destino
        </th>
        <th>
            Aprovador
        </th>
        <th>
            Status
        </th>

        <th>


        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <th>
            @item.Empregado.Nome
        </th>
        <td>
            @item.DataPartida
        </td>
        <td>
            @item.DataChegadaPrevista
        </td>
        <td>
            @item.Transporte.Nome
        </td>
        <td>
            @item.Origem.Nome
        </td>
        <td>
            @item.Destino.Nome
        </td>

        <td>
            @item.AprovadorSolicitacaoId.FirstOrDefault().Aprovador.Empregado.Nome            
        </td>
        <td>
            @item.AprovadorSolicitacaoId.FirstOrDefault().Status.Nome
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }

</table>
